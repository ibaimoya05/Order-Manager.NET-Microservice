@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Routing

<div class="page">
    <div class="sidebar">
        <h3>Order Manager</h3>
        <nav>
            <ul>
                <li><NavLink href="/" class="nav-link">Products</NavLink></li>
                <li><NavLink href="/create-product" class="nav-link">Create Product</NavLink></li>
                <li><NavLink href="/cart" class="nav-link">Cart</NavLink></li>
                <li><NavLink href="/orders" class="nav-link">Orders</NavLink></li>
            </ul>
        </nav>
    </div>

    <main>
        <div class="content px-4">
            @Body
        </div>
    </main>
</div>

<div id="blazor-error-ui">
    An error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<style>
    .page {
        display: flex;
        height: 100vh;
    }

    .sidebar {
        width: 250px;
        background-color: #343a40;
        color: white;
        padding: 20px;
        position: fixed;
        height: 100vh;
        left: 0;
        top: 0;
    }

    .sidebar h3 {
        margin-bottom: 20px;
        color: white;
    }

    .sidebar ul {
        list-style: none;
        padding: 0;
    }

    .sidebar li {
        margin-bottom: 10px;
    }

    .sidebar .nav-link {
        color: white;
        text-decoration: none;
        display: block;
        padding: 10px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    .sidebar .nav-link:hover {
        background-color: #495057;
    }

    main {
        flex: 1;
        margin-left: 250px;
        padding: 2rem;
        background-color: #f8f9fa;
        min-height: 100vh;
    }

    .content {
        max-width: 1200px;
        margin: 0 auto;
    }

    #blazor-error-ui {
        display: none;
    }
</style>
